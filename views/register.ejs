<!DOCTYPE html>
<html lang="en">

<%- include ('partials/_head', {title: 'Register' }) %>

    <body>

        <%- include("partials/_navbar") %>

            <section
                class="min-h-screen bg-gradient-to-br from-blue-50 via-amber-50 to-blue-100 flex items-center justify-center px-4">
                <div class=" bg-white shadow-md rounded-lg p-6 w-full max-w-md">
                    <h1 class="section-title">Create an Account</h1>

                    <% if (errors && errors.length) { %>
                        <div class="mb-3">
                            <% errors.forEach(msg=> { %>
                                <div class="text-red-600">
                                    <%= msg %>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>


                            <form action="/register" method="POST" class="space-y-4">
                                <div>
                                    <label class="form-label">Username</label>
                                    <input type="text" name="username" placeholder="Username" class="form-input">

                                </div>

                                <div>
                                    <label class="form-label">Email</label>
                                    <input type="text" name="email" placeholder="Email" class="form-input">


                                </div>

                                <div>
                                    <label class="form-label">Password</label>
                                    <input type="password" name="password" placeholder="Password" class="form-input">

                                </div>

                                <button type="submit"
                                    class="flex items-center justify-center border border-gray-300 py-2 px-4 rounded text-sm bg-blue-600 text-white font-bold hover:bg-blue-700 transition w-full">Register</button>

                                <p class="text-sm text-center text-gray-600 mt-4">
                                    Already have an account?
                                    <a href="/login" class="link-hover font-medium">Login</a>
                                </p>

                                <a href="/auth/google" class="btn-google">
                                    <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="w-5 h-5 mr-2"
                                        alt="Google">
                                    Register with Google
                                </a>
                            </form>
                </div>

            </section>


    </body>

</html>