<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Finance Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Simple Sidebar -->
        <div class="w-56 bg-blue-800 text-white p-4 hidden md:block">
            <div class="flex items-center mb-8 space-x-2">
                <i class="fas fa-wallet text-xl"></i>
                <span class="text-lg font-semibold">Dompet Dims</span>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white shadow-sm p-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <button id="mobile-menu-toggle" class="md:hidden mr-4 text-gray-500">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <h1 class="text-xl font-semibold">Complete Registration</h1>
                    </div>
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
                            <i class="fas fa-user text-gray-600"></i>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="fixed inset-0 z-50 hidden bg-gray-800 bg-opacity-75">
                <div
                    class="absolute top-0 left-0 h-screen w-56 bg-blue-800 p-4 transform -translate-x-full transition-transform duration-300">
                    <div class="flex items-center justify-between mb-8">
                        <div class="flex items-center space-x-2">
                            <i class="fas fa-wallet text-xl"></i>
                            <span class="text-lg font-semibold">Dompet Dims</span>
                        </div>
                        <button id="mobile-menu-close" class="text-white">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <nav class="space-y-3">
                        <a href="/dashboard" class="block p-2 rounded bg-blue-700 text-white">
                            <i class="fas fa-chart-pie w-5"></i>
                            <span>Dashboard</span>
                        </a>
                        <a href="/transactions" class="block p-2 rounded hover:bg-blue-700 text-white">
                            <i class="fas fa-exchange-alt w-5"></i>
                            <span>Transactions</span>
                        </a>
                        <a href="#" class="block p-2 rounded hover:bg-blue-700 text-white">
                            <i class="fas fa-cog w-5"></i>
                            <span>Settings</span>
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Content -->
            <main class="flex-1 p-6 overflow-y-auto">

                <!-- Registration Form Section -->
                <form action="/userprofiles/create" method="post">
                    <div class="bg-white rounded-lg shadow p-6 max-w-2xl mx-auto">
                        <div class="flex flex-col items-center mb-6">
                            <div class="relative w-24 h-24 rounded-full bg-gray-200 mb-4 overflow-hidden">
                                <input type="file" name="image" class="hidden" accept="image/*">
                                <label for="profile-image"
                                    class="cursor-pointer flex items-center justify-center h-full w-full">
                                    <i class="fas fa-user-plus text-3xl text-gray-500"></i>
                                </label>
                                <img id="image-preview" src="#" alt="Profile preview"
                                    class="absolute inset-0 h-full w-full object-cover hidden">
                            </div>
                            <p class="text-sm text-gray-500">Click to upload photo (optional)</p>
                        </div>

                        <div class="space-y-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Full Name*</label>
                                    <input type="text" name="fullname"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Date of Birth*</label>
                                    <input type="date" name="date_of_birth"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Address*</label>
                                <textarea rows="3" name="adress"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number*</label>
                                <input type="text" name="phone_number"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>

                        <div class="flex justify-end mt-6 space-x-3">
                            <button onclick="window.location.href='/'"
                                class="px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50">
                                Skip for now
                            </button>

                            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                                Complete Registration
                            </button>
                        </div>
                    </div>
                </form>


            </main>
        </div>
    </div>

    <script>
        // Mobile menu toggle functionality
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const mobileMenuClose = document.getElementById('mobile-menu-close');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuPanel = mobileMenu.querySelector('div');

        mobileMenuToggle.addEventListener('click', () => {
            mobileMenu.classList.remove('hidden');
            setTimeout(() => {
                mobileMenuPanel.classList.remove('-translate-x-full');
            }, 10);
        });

        mobileMenuClose.addEventListener('click', () => {
            mobileMenuPanel.classList.add('-translate-x-full');
            setTimeout(() => {
                mobileMenu.classList.add('hidden');
            }, 300);
        });
    </script>
    <script>
        // Image preview functionality
        const imageInput = document.getElementById('profile-image');
        const imagePreview = document.getElementById('image-preview');

        imageInput.addEventListener('change', function (e) {
            const [file] = imageInput.files;
            if (file) {
                imagePreview.src = URL.createObjectURL(file);
                imagePreview.classList.remove('hidden');
                imagePreview.nextElementSibling.classList.add('hidden');
            }
        });
    </script>
</body>

</html>