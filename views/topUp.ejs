<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Finance Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Simple Sidebar -->
        <div class="w-56 bg-blue-800 text-white p-4 hidden md:block">
            <div class="flex items-center mb-8 space-x-2">
                <i class="fas fa-wallet text-xl"></i>
                <span class="text-lg font-semibold">FinTrack</span>
            </div>

            <nav class="space-y-3">
                <a href="#" class="flex items-center space-x-2 p-2 rounded bg-blue-700">
                    <i class="fas fa-chart-pie w-5"></i>
                    <span>Dashboard</span>
                </a>
                <a href="#" class="flex items-center space-x-2 p-2 rounded hover:bg-blue-700">
                    <i class="fas fa-exchange-alt w-5"></i>
                    <span>Transactions</span>
                </a>
                <a href="#" class="flex items-center space-x-2 p-2 rounded hover:bg-blue-700">
                    <i class="fas fa-piggy-bank w-5"></i>
                    <span>Budget</span>
                </a>
                <a href="#" class="flex items-center space-x-2 p-2 rounded hover:bg-blue-700">
                    <i class="fas fa-cog w-5"></i>
                    <span>Settings</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white shadow-sm p-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <button id="mobile-menu-toggle" class="md:hidden mr-4 text-gray-500">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <h1 class="text-xl font-semibold">Add Money</h1>
                    </div>
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
                            <i class="fas fa-user text-gray-600"></i>
                        </div>
                    </div>
                </div>
            </header>


            <!-- Content -->
            <main class="flex-1 p-6 overflow-y-auto">
                <!-- Add Money Form Section -->
                <div class="bg-white rounded-lg shadow p-6 mb-6 max-w-md mx-auto">
                    <h2 class="text-xl font-semibold mb-6">Add Funds to Your Wallet</h2>

                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Amount (USD)*</label>
                            <input type="number" min="0" step="0.01" required
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="0.00">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Payment Method*</label>
                            <select
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Select payment method</option>
                                <option>Bank Transfer</option>
                                <option>Credit Card</option>
                                <option>Debit Card</option>
                                <option>Digital Wallet</option>
                            </select>
                        </div>

                        <div class="pt-2">
                            <button class="w-full py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                                Add Funds
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Recent Transactions -->
                <div class="bg-white rounded-lg shadow p-6 mb-6">
                    <div class="flex flex-col items-center mb-4">
                        <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center mb-3">
                            <i class="fas fa-wallet text-2xl text-blue-600"></i>
                        </div>
                        <p class="text-sm text-gray-500">Main Wallet Balance</p>
                        <h2 class="text-3xl font-bold">$4,250.75</h2>
                    </div>

                    <div class="grid grid-cols-3 gap-4 text-center">
                        <button class="p-3 rounded-lg border hover:bg-blue-50">
                            <i class="fas fa-plus text-blue-600 mb-1"></i>
                            <p class="text-xs">Add Money</p>
                        </button>
                        <button class="p-3 rounded-lg border hover:bg-green-50">
                            <i class="fas fa-exchange-alt text-green-600 mb-1"></i>
                            <p class="text-xs">Transfer</p>
                        </button>
                        <button class="p-3 rounded-lg border hover:bg-purple-50">
                            <i class="fas fa-qrcode text-purple-600 mb-1"></i>
                            <p class="text-xs">Pay</p>
                        </button>
                    </div>
                </div>

                <!-- Recent Transactions -->
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold">Recent Transactions</h2>
                        <a href="#" class="text-blue-600 text-sm">View All</a>
                    </div>

                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
                            <div class="flex items-center space-x-3">
                                <div class="p-2 rounded-full bg-green-100 text-green-600">
                                    <i class="fas fa-arrow-down"></i>
                                </div>
                                <div>
                                    <p class="font-medium">Salary Deposit</p>
                                    <p class="text-xs text-gray-500">Today, 10:45 AM</p>
                                </div>
                            </div>
                            <p class="font-medium text-green-600">+$2,500</p>
                        </div>

                        <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
                            <div class="flex items-center space-x-3">
                                <div class="p-2 rounded-full bg-red-100 text-red-600">
                                    <i class="fas fa-shopping-bag"></i>
                                </div>
                                <div>
                                    <p class="font-medium">Grocery Store</p>
                                    <p class="text-xs text-gray-500">Yesterday, 3:15 PM</p>
                                </div>
                            </div>
                            <p class="font-medium text-red-600">-$95.24</p>
                        </div>
                    </div>
                </div>

                <!-- Shopping Items -->
                <div class="space-y-3">
                    <!-- Shopping Item -->
                    <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
                        <div class="flex items-center space-x-3">
                            <div class="flex items-center justify-center w-8 h-8">
                                <input type="checkbox"
                                    class="w-4 h-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                            </div>
                            <div>
                                <p class="font-medium">Milk</p>
                                <p class="text-xs text-gray-500">Groceries • Quantity: 2</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <span class="font-medium">$5.99</span>
                            <button class="text-gray-400 hover:text-red-500">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Second Item -->
                    <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
                        <div class="flex items-center space-x-3">
                            <div class="flex items-center justify-center w-8 h-8">
                                <input type="checkbox"
                                    class="w-4 h-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                            </div>
                            <div>
                                <p class="font-medium">Bread</p>
                                <p class="text-xs text-gray-500">Groceries • Quantity: 1</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <span class="font-medium">$3.49</span>
                            <button class="text-gray-400 hover:text-red-500">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Third Item -->
                    <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
                        <div class="flex items-center space-x-3">
                            <div class="flex items-center justify-center w-8 h-8">
                                <input type="checkbox"
                                    class="w-4 h-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                            </div>
                            <div>
                                <p class="font-medium">Laundry Detergent</p>
                                <p class="text-xs text-gray-500">Household • Quantity: 1</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <span class="font-medium">$12.99</span>
                            <button class="text-gray-400 hover:text-red-500">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <!-- More transactions would go here... -->
                </div>

                <!-- Pagination -->
                <div class="flex justify-between items-center mt-6">
                    <div class="text-sm text-gray-500">
                        Showing 1 to 10 of 100 transactions
                    </div>
                    <div class="flex space-x-2">
                        <button class="px-3 py-1 border rounded text-gray-600 hover:bg-gray-100">Previous</button>
                        <button class="px-3 py-1 bg-blue-600 text-white rounded">1</button>
                        <button class="px-3 py-1 border rounded text-gray-600 hover:bg-gray-100">2</button>
                        <button class="px-3 py-1 border rounded text-gray-600 hover:bg-gray-100">Next</button>
                    </div>
                </div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold mb-4">Account Settings</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="border rounded-lg p-4">
                    <h3 class="font-medium text-gray-700 mb-3">
                        <i class="fas fa-bell mr-2 text-blue-500"></i>Notification Preferences
                    </h3>
                    <div class="space-y-3">
                        <label class="flex items-center">
                            <input type="checkbox" class="rounded text-blue-500 mr-2" checked>
                            <span>Email notifications</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" class="rounded text-blue-500 mr-2" checked>
                            <span>Push notifications</span>
                        </label>
                    </div>
                </div>

                <div class="border rounded-lg p-4">
                    <h3 class="font-medium text-gray-700 mb-3">
                        <i class="fas fa-globe mr-2 text-blue-500"></i>Language & Region
                    </h3>
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Language</p>
                            <select class="w-full bg-gray-50 border border-gray-300 rounded px-3 py-2">
                                <option>English</option>
                                <option>Spanish</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </main>
</body>

</html>