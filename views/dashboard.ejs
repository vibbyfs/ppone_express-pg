<!DOCTYPE html>

<%- include ('partials/_head', {title: 'Dashboard' }) %>

    <body class="bg-gray-50">
        <div class="flex h-screen overflow-hidden">
            <!-- Simple Sidebar -->
            <div class="w-56 bg-gradient-to-r from-blue-500 to-amber-300 text-white p-4 hidden md:block">
                <div class="flex items-center mb-8 space-x-2">
                    <i class="fas fa-wallet text-xl"></i>
                    <span class="text-lg font-semibold">Dompet Dims</span>
                </div>

                <nav class="space-y-3">
                    <a href="#" class="flex items-center space-x-2 p-2 rounded hover:bg-blue-700">
                        <i class="fas fa-chart-pie w-5"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/transactions" class="flex items-center space-x-2 p-2 rounded hover:bg-blue-700">
                        <i class="fas fa-exchange-alt w-5"></i>
                        <span>Transactions</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 p-2 rounded hover:bg-blue-700">
                        <i class="fas fa-piggy-bank w-5"></i>
                        <span>Budget</span>
                    </a>
                    <a href="#" class="flex items-center space-x-2 p-2 rounded hover:bg-blue-700">
                        <i class="fas fa-cog w-5"></i>
                        <span>Settings</span>
                    </a>
                    <a href="/logout" class="block p-2 rounded hover:bg-blue-700 text-white">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        <span>Logout</span>
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <!-- Header -->
                <header class="bg-white shadow-sm p-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <button id="mobile-menu-toggle" class="md:hidden mr-4 text-gray-500">
                                <i class="fas fa-bars text-xl"></i>
                            </button>
                            <h1 class="text-xl font-semibold">Dashboard</h1>
                            <div>
                                <a href="" class="btn-3d p-2"><button>Shopping</button></a>
                            </div>
                        </div>
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
                                <a href=""><i class="fas fa-user text-gray-600"></i></a>
                            </div>
                        </div>
                    </div>
                </header>

                <!-- Mobile Menu -->
                <div id="mobile-menu" class="fixed inset-0 z-50 hidden bg-gray-800 bg-opacity-75">
                    <div
                        class="absolute top-0 left-0 h-screen w-56 bg-blue-800 p-4 transform -translate-x-full transition-transform duration-300">
                        <div class="flex items-center justify-between mb-8">
                            <div class="flex items-center space-x-2">
                                <i class="fas fa-wallet text-xl"></i>
                                <span class="text-lg font-semibold">Dompet Dims</span>
                            </div>
                            <button id="mobile-menu-close" class="text-white">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <nav class="space-y-3">
                            <a href="#" class="block p-2 rounded bg-blue-700 text-white">
                                <i class="fas fa-chart-pie w-5"></i>
                                <span>Dashboard</span>
                            </a>
                            <a href="#" class="block p-2 rounded hover:bg-blue-700 text-white">
                                <i class="fas fa-exchange-alt w-5"></i>
                                <span>Transactions</span>
                            </a>
                            <a href="#" class="block p-2 rounded hover:bg-blue-700 text-white">
                                <i class="fas fa-piggy-bank w-5"></i>
                                <span>Budget</span>
                            </a>
                            <a href="#" class="block p-2 rounded hover:bg-blue-700 text-white">
                                <i class="fas fa-cog w-5"></i>
                                <span>Settings</span>
                            </a>
                            <a href="/logout" class="block p-2 rounded hover:bg-blue-700 text-white">
                                <i class="fas fa-sign-out-alt w-5"></i>
                                <span>Logout</span>
                            </a>
                        </nav>
                    </div>
                </div>

                <!-- Content -->
                <main class="flex-1 p-6 overflow-y-auto">
                    <!-- Summary Cards -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                        <!-- Balance Card -->
                        <div class="bg-white p-4 rounded-lg shadow">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500">Balance</p>
                                    <p class="text-xl font-bold mt-1">$12,450</p>
                                </div>
                                <div class="p-2 rounded-full bg-blue-100 text-blue-600">
                                    <i class="fas fa-wallet"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Income Card -->
                        <div class="bg-white p-4 rounded-lg shadow">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500">Income</p>
                                    <p class="text-xl font-bold mt-1">$3,200</p>
                                </div>
                                <div class="p-2 rounded-full bg-green-100 text-green-600">
                                    <i class="fas fa-arrow-down"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Expenses Card -->
                        <div class="bg-white p-4 rounded-lg shadow">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500">Expenses</p>
                                    <p class="text-xl font-bold mt-1">$1,450</p>
                                </div>
                                <div class="p-2 rounded-full bg-red-100 text-red-600">
                                    <i class="fas fa-arrow-up"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Savings Card -->
                        <div class="bg-white p-4 rounded-lg shadow">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm text-gray-500">Savings</p>
                                    <p class="text-xl font-bold mt-1">$7,800</p>
                                </div>
                                <div class="p-2 rounded-full bg-purple-100 text-purple-600">
                                    <i class="fas fa-piggy-bank"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Transactions Section -->
                    <div class="bg-white rounded-lg shadow p-4 mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold">Recent Transactions</h2>
                            <a href="#" class="text-blue-600 text-sm">View All</a>
                        </div>

                        <div class="space-y-3">
                            <!-- Transaction 1 -->
                            <div class="flex items-center justify-between p-2 hover:bg-gray-50 rounded">
                                <div class="flex items-center space-x-3">
                                    <div class="p-2 rounded-full bg-green-100 text-green-600">
                                        <i class="fas fa-arrow-down"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium">Salary Deposit</p>
                                        <p class="text-xs text-gray-500">Today, 10:45 AM</p>
                                    </div>
                                </div>
                                <p class="font-medium text-green-600">+$2,500</p>
                            </div>

                            <!-- Transaction 2 -->
                            <div class="flex items-center justify-between p-2 hover:bg-gray-50 rounded">
                                <div class="flex items-center space-x-3">
                                    <div class="p-2 rounded-full bg-red-100 text-red-600">
                                        <i class="fas fa-shopping-bag"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium">Grocery Store</p>
                                        <p class="text-xs text-gray-500">Yesterday, 3:15 PM</p>
                                    </div>
                                </div>
                                <p class="font-medium text-red-600">-$95.24</p>
                            </div>

                            <!-- Transaction 3 -->
                            <div class="flex items-center justify-between p-2 hover:bg-gray-50 rounded">
                                <div class="flex items-center space-x-3">
                                    <div class="p-2 rounded-full bg-blue-100 text-blue-600">
                                        <i class="fas fa-bolt"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium">Electric Bill</p>
                                        <p class="text-xs text-gray-500">Yesterday, 10:30 AM</p>
                                    </div>
                                </div>
                                <p class="font-medium text-red-600">-$120</p>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="bg-white rounded-lg shadow p-4">
                        <h2 class="text-lg font-semibold mb-4">Quick Actions</h2>
                        <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                            <button
                                class="p-3 rounded-lg border hover:border-blue-500 hover:bg-blue-50 flex flex-col items-center">
                                <div class="p-2 rounded-full bg-blue-500 text-white mb-2">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <span class="text-sm">Add Money</span>
                            </button>

                            <button
                                class="p-3 rounded-lg border hover:border-green-500 hover:bg-green-50 flex flex-col items-center">
                                <div class="p-2 rounded-full bg-green-500 text-white mb-2">
                                    <i class="fas fa-exchange-alt"></i>
                                </div>
                                <span class="text-sm">Transfer</span>
                            </button>

                            <button
                                class="p-3 rounded-lg border hover:border-yellow-500 hover:bg-yellow-50 flex flex-col items-center">
                                <div class="p-2 rounded-full bg-yellow-500 text-white mb-2">
                                    <i class="fas fa-file-invoice"></i>
                                </div>
                                <span class="text-sm">Bills</span>
                            </button>

                            <button
                                class="p-3 rounded-lg border hover:border-purple-500 hover:bg-purple-50 flex flex-col items-center">
                                <div class="p-2 rounded-full bg-purple-500 text-white mb-2">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <span class="text-sm">Reports</span>
                            </button>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <script>
            // Mobile menu toggle functionality
            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenuClose = document.getElementById('mobile-menu-close');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuPanel = mobileMenu.querySelector('div');

            mobileMenuToggle.addEventListener('click', () => {
                mobileMenu.classList.remove('hidden');
                setTimeout(() => {
                    mobileMenuPanel.classList.remove('-translate-x-full');
                }, 10);
            });

            mobileMenuClose.addEventListener('click', () => {
                mobileMenuPanel.classList.add('-translate-x-full');
                setTimeout(() => {
                    mobileMenu.classList.add('hidden');
                }, 300);
            });
        </script>
    </body>

    </html>