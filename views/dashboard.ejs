    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style type="text/tailwindcss">
        @layer utilities {
            .typewriter {
                width: 0;
                overflow: hidden;
                white-space: nowrap;
                border-right: .15em solid orange; /* Cursor */
                /* Mengubah animasi:
                   - typing sekarang punya 'forwards' untuk menahan keadaan akhir
                   - blink-caret diatur durasinya agar berhenti setelah typing selesai
                */
                animation: 
                    typing 3.5s steps(40, end) forwards,
                    blink-caret .75s step-end forwards; /* 'forwards' agar kursor menghilang */
                animation-delay: 0s, 3.5s; /* Kursor mulai berkedip setelah teks selesai diketik */
                animation-iteration-count: 1; /* Hanya satu kali animasi */
            }

            @keyframes typing {
                from { width: 0 }
                to { width: 100% }
            }

            @keyframes blink-caret {
                0%, 50% { border-color: orange; } /* Kursor terlihat */
                100% { border-color: transparent; } /* Kursor menghilang di akhir */
            }

            /* Untuk efek fade-in sederhana */
            .fade-in {
                animation: fadeIn 2s ease-in-out forwards;
            }

            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }
        }
    </style>
</head>

